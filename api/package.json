{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/bin/src/www",
    "clean": "echo \"🗑  Cleaning API...\" && rimraf dist",
    "build": "echo \"🛠  Building API...\" && cd src && tsc --diagnostics",
    "rebuild": "yarn clean && yarn build",
    "build:test": "echo \"⚙️  Building API Tests...\" && cd test && tsc",
    "mocha": "echo \"☕️  Running Mocha...\" && mocha dist/test/api/test/test.js",
    "test": "echo \"🔬  Running Unit Tests...\" && yarn build:test && yarn mocha",
    "test:coverage": "echo \"📊  Running Unit Tests and Coverage Report...\" && yarn build:test && nyc mocha dist/test/api/test/test.js 1> .coverage"
  },
  "nyc": {
    "silent": false,
    "report-dir": "../coverage",
    "exclude": [
      "**/*test.*s",
      "**/*mocks.*s"
    ],
    "reporter": [
      "mocha",
      "html",
      "lcov",
      "text-lcov"
    ]
  },
  "engines": {
    "node": "8.11.*"
  },
  "dependencies": {
    "@jyv/core": "^1.0.2",
    "@jyv/mongo": "^1.0.4",
    "@types/bcrypt": "^3.0.0",
    "bcrypt": "^3.0.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "http-status-codes": "^1.3.0",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.1.10",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.2",
    "typescript": "2.7.2"
  }
}
